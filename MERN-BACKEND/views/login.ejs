<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Anima</title>
    <link rel="stylesheet" href="/stylesheets/login.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Archivo+Black&family=Montserrat:wght@100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="btn-box">
      <input
        type="button"
        class="sign-btn btn"
        value="Sign-up"
        onclick="shiftToSignUp()"
      />
      <input
        type="button"
        class="log-btn btn"
        value="Login"
        onclick="shiftToLogin()"
      />
    </div>
    <div class="img-box">
      <img src="/images/Ani-black-logo.jpg" class="anima-img" />
    </div>
    <div class="big-box">
      <!-- Sign-up Form -->
      <div class="user-form-box">
        <form action="/users/register" method="post" class="user-form">
          <div class="div-1">
            <label for="user-name">User name</label>
            <input type="text" name="fullname" class="inp" />
            <label for="email-inp">E-mail</label>
            <input type="email" name="email" class="inp" />
          </div>
          <div class="div-2">
            <label for="pass-inp">Create-Password</label><br />
            <input type="password" name="password" class="inp" /><br />
            <input type="submit" value="Sign-up" class="sign-up-btn" />
          </div>
        </form>
      </div>

      <!-- Login Form -->
      <div class="off-user-form-box">
        <form action="/users/login" method="post" class="off-user-form">
          <div class="emailMem">
            <label for="email-inp">E-mail</label>
            <input type="email" name="email" class="off-inp" />
          </div>

          <div class="off-email">
            <label for="off-email-inp">Official E-mail</label>
            <input type="email" name="email" class="off-inp" />
          </div>

          <label for="pass-inp">Password</label>
          <input type="password" name="password" class="off-inp" />

          <input
            type="submit"
            value="Submit"
            class="ver-class ver-class-1"
            onclick="toggleEmailForm()"
          /><br />

          <input
            type="button"
            value="Not an official Member"
            class="ver-class ver-class-2"
            onclick="toggleNonOfficial()"
          />
        </form>
      </div>
    </div>
    
  </body>

  <script src="/javascript/loginn.js"></script>
</html>
